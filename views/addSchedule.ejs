<%- include('partials/navbar.ejs') %>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-bus"></i> Add Bus Schedule
                </h1>
                <%- include('partials/messages.ejs') %>
                    <form action="/schedule/create" method="POST">
                        <div class="form-group">
                            <label for="exampleSelect1">Select Bus</label>
                            <select class="form-control" id="bus" name="busId">
                        <% buses.forEach(function(bus){ %>
                          <option value="<%= bus._id %>"><%= bus.busName %></option>
                        <% }) %>
                      </select>
                        </div>
                        <div class="form-group">
                            <label for="depart">Depart Date</label>
                            <input type="date" id="depart" name="depart" class="form-control" placeholder="Enter Depart Date" value="<%= typeof depart != 'undefined' ? depart : '' %>" required />
                        </div>
                        <div class="form-group">
                            <label for="arrival">Arrival Date</label>
                            <input type="date" id="arrival" name="arrival" class="form-control" placeholder="Enter Arrival Date" value="<%= typeof arrival != 'undefined' ? arrival : '' %>" required />
                        </div>
                        <div class="form-group">
                            <label for="pickup">From</label>
                            <input type="pickup" id="pickup" name="pickup" class="form-control" placeholder="Travelling From" value="<%= typeof pickup != 'undefined' ? pickup : '' %>" required />
                        </div>
                        <div class="form-group">
                            <label for="dropoff">To</label>
                            <input type="dropoff" id="dropoff" name="dropoff" class="form-control" placeholder="Travelling To" value="<%= typeof dropoff != 'undefined' ? dropoff : '' %>" required />
                        </div>
                        <div class="form-group">
                            <label for="checkpoints">Select Checkpoints</label>
                            <select multiple class="form-control" id="checkpoints" name="checkpoints">
                                <% checkpoints.forEach(function(checkpoint){ %>
                                    <option value="<%= checkpoint._id %>"><%= checkpoint.checkpoint %></option>
                                <% }) %>                  
                      </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
      Add Schedule
    </button>
                    </form>
                    <p class="lead mt-4"><a href="/dashboard">Go Back</a></p>
            </div>
        </div>
    </div>