<%- include('partials/navbar') %>

    <!-- Tables
      ================================================== -->
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="page-header">
                            <h1 id="tables">All Checkpoints</h1>
                        </div>
                    </div>
                    <div class="col-md-6 p-1">
                        <a href="/checkpoint/create" class="btn btn-warning">Add Checkpoint</a>
                    </div>
                </div>
                <div class="bs-component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Checkpoint</th>
                                <th scope="col">Bus</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cps.forEach(function(checkpoint){ %>
                                <tr class="table-secondary">
                                    <th scope="row">
                                        <%= checkpoint.checkpoint %>
                                    </th>
                                    <th scope="row">
                                        <%= checkpoint.busName %>
                                    </th>
                                    <td>
                                        <% if(user.roles != 'Admin'){ %>
                                            <a href="#">Edit</a> |
                                            <a href="#">Delete</a>
                                            <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>