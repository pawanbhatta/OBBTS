<%- include('partials/navbar') %>

    <!-- Tables
      ================================================== -->
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="page-header">
                            <h1 id="tables">All Schedules</h1>
                        </div>
                    </div>
                    <div class="col-md-6 p-1">
                        <a href="/schedule/create" class="btn btn-warning">Add Schedule</a>
                    </div>
                </div>
                <div class="bs-component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Bus Name</th>
                                <th scope="col">Depart Time</th>
                                <th scope="col">Arrival Time</th>
                                <th scope="col">Pickup</th>
                                <th scope="col">Dropoff</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% newschedules.forEach(function(schedule){ %>
                                <tr class="table-secondary">
                                    <th scope="row">
                                        <%= schedule.busName %>
                                    </th>
                                    <th scope="row">
                                        <%= schedule.depart %>
                                    </th>
                                    <th scope="row">
                                        <%= schedule.arrival %>
                                    </th>
                                    <th scope="row">
                                        <%= schedule.pickup %>
                                    </th>
                                    <th scope="row">
                                        <%= schedule.dropoff %>
                                    </th>
                                    <td>
                                        <% if(user.roles != 'Admin'){ %>
                                            <a href="#">Edit</a> |
                                            <a href="#">Delete</a>
                                            <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>