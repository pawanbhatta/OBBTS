<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include('partials/messages.ejs') %>
                <form action="/booker/create" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="Phone">Phone</label>
                        <input type="text" id="Phone" name="phone" class="form-control" placeholder="Enter Phone" value="<%= typeof phone != 'undefined' ? phone : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1">Select Bus</label>
                        <select class="form-control" id="bus" name="busId">
                  <% buses.forEach(function(bus){ %>
                    <option value="<%= bus._id %>"><%= bus.busName %></option>
                  <% }) %>
                </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleSelect1">Select Seat</label>
                        <select class="form-control" id="seat" name="seatId">
                <% seats.forEach(function(seat){ %>
                  <option value="<%= seat._id %>"><%= seat.seat %></option>
                <% }) %>
              </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
        Book Now
      </button>
                </form>
                <p class="lead mt-4"> <a href="/dashboard">Go Back</a></p>
        </div>
    </div>
</div>