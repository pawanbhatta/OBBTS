<%- include('partials/navbar.ejs') %>

    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-bus"></i> Add Checkpoint
                </h1>
                <%- include('partials/messages.ejs') %>
                    <form action="/checkpoint/create" method="POST">
                        <div class="form-group">
                            <label for="exampleSelect1">Select Bus</label>
                            <select class="form-control" id="bus" name="busId">
                        <% buses.forEach(function(bus){ %>
                          <option value="<%= bus._id %>"><%= bus.busName %></option>
                        <% }) %>
                      </select>
                        </div>
                        <div class="form-group">
                            <label for="checkpoint">Checkpoint</label>
                            <input type="checkpoint" id="checkpoint" name="checkpoint" class="form-control" placeholder="Enter Checkpoint" value="<%= typeof checkpoint != 'undefined' ? checkpoint : '' %>" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
      Add Checkpoint
    </button>
                    </form>
                    <p class="lead mt-4"><a href="/dashboard">Go Back</a></p>
            </div>
        </div>
    </div>