<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-bus"></i> Add Bus
            </h1>
            <%- include('partials/messages.ejs') %>
                <form action="/bus/create" method="POST">
                    <div class="form-group">
                        <label for="busName">Bus Name</label>
                        <input type="busName" id="busName" name="busName" class="form-control" placeholder="Enter Bus Name" value="<%= typeof busName != 'undefined' ? busName : '' %>" required />
                    </div>
                    <div class="form-group">
                        <label for="busNo">Bus Number</label>
                        <input type="busNo" id="busNo" name="busNo" class="form-control" placeholder="Enter Bus Number" value="<%= typeof busNo != 'undefined' ? busNo : '' %>" required />
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>
                        <input type="type" id="type" name="type" class="form-control" placeholder="Enter Type Of Bus" value="<%= typeof type != 'undefined' ? type : '' %>" required />
                    </div>
                    <div class="form-group">
                        <label for="numOfSeats">Number of Seats</label>
                        <input type="numOfSeats" id="numOfSeats" name="numOfSeats" class="form-control" placeholder="Enter Number Of Seats" value="<%= typeof numOfSeats != 'undefined' ? numOfSeats : '' %>" required />
                    </div>
                    <div class="form-group">
                        <label for="operator">Operator</label>
                        <input type="operator" id="operator" name="operator" class="form-control" readonly value="<%= user.name %>" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
        Add Bus
      </button>
                </form>
                <p class="lead mt-4"><a href="/dashboard">Go Back</a></p>
        </div>
    </div>
</div>